<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nhnacademy.jdbc.board.board.mapper.BoardMapper">
    <resultMap id="Comment" type="com.nhnacademy.jdbc.board.board.domain.Comment">
        <result column="boardId" property="boardId" />
        <result column="comments" property="comments" />
    </resultMap>
    <resultMap id="Page" type="com.nhnacademy.jdbc.board.board.domain.Page">
        <result column="pageNo" property="pageNo" />
        <result column="pageAmount" property="pageAmount" />
    </resultMap>
    <resultMap id="Board" type="com.nhnacademy.jdbc.board.board.domain.Board">
        <result column="boardId" property="boardId" />
        <result column="userId" property="userId" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="modifier" property="modifier" />
        <result column="createdAt" property="createdAt" />
        <result column="modifyDate" property="modifyDate" />
<!--        <result column="comments" property="modifyDate" />-->
        <collection property="commentCnt" javaType="java.lang.Integer" resultMap="Comment" />
    </resultMap>

    <select id="BoardComment" parameterType="java.lang.Integer" resultType="Integer">
        SELECT
           count(c.comments) as commentCnt
        FROM Board b
                RIGHT JOIN
             Comments c
             ON b.boardId = c.boardId
        where c.boardId = #{boardId}
    </select>

    <select id="selectBoard" resultType="com.nhnacademy.jdbc.board.board.domain.Board">
        select *
        from Board
        where boardId = #{boardId}
    </select>


    <select id="selectBoards" resultType="com.nhnacademy.jdbc.board.board.domain.Board">
        select *
        from Board
    </select>
    <select id="selectBoardsPaging" resultType="com.nhnacademy.jdbc.board.board.domain.Board">
    select *
    from Board LIMIT #{pageNo},#{pageAmount}
</select>



    <insert id="insertBoard">
        insert
        into Board(userId, title, content, modifier, createdAt, modifyDate)
        values ( #{userId}, #{title}, #{content}, #{modifier}, #{createdAt}, #{modifyDate})
    </insert>

    <update id="updateById">
        update Board
        set userId=#{userId},
            title=#{title},
            content=#{content},
            modifier=#{modifier},
            modifyDate=#{modifyDate}
        where boardId = #{boardId}
    </update>
    <update id="updateContentById">
        update Board
        set content=#{board.content},
            modifier=#{board.modifier},
            modifyDate=#{board.modifyDate}
        where boardId = #{board.boardId}
    </update>

    <delete id="deleteById">
        delete
        from Board
        where boardId = #{boardId}
    </delete>

</mapper>
